{
  "name": "path-to-kingdoms",
  "version": "0.1.0",
  "description": "An incremental game about growing from a Hamlet to a Kingdom",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asbjornb/path-to-kingdoms.git"
  },
  "keywords": [
    "incremental",
    "idle",
    "game"
  ],
  "author": "Asbj√∏rn Brandt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asbjornb/path-to-kingdoms/issues"
  },
  "homepage": "https://github.com/asbjornb/path-to-kingdoms#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
